@using System.Web.Optimization
@model DateDiffMVC.ViewModels.HomeViewModel
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jqueryunobtrusive")
    @Scripts.Render("~/bundles/jqueryval")
    

</head>
<body>
    <div style="width: 600px; height: 100px">

        @using (Html.BeginForm("Index", "Home", FormMethod.Post))
        {
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <div class="container">
                <div class="row">
                    <!--1ST COLUMN-->
                    <div class="col-lg-4">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <h3 class="panel-title">Start Date</h3>
                            </div>
                            <div class="panel-body">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.StartDate.Day, new { htmlAttributes = new { @class = "control-label" } })
                                    <div class="well well-sm">
                                        @Html.DropDownListFor(m => m.StartDate.Day, Enumerable.Range(1, 31).Select(i => new SelectListItem { Value = i.ToString(), Text = i.ToString() }), "Day", new { htmlAttributes = new { @class = "form-control" }, id = 1 })
                                    </div>
                                    @*<span asp-validation-for="1" class="text-danger"></span>*@
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.StartDate.Month, new { htmlAttributes = new { @class = "control-label" } })
                                    <div class="well well-sm">
                                        @Html.DropDownListFor(m => m.StartDate.Month, Enumerable.Range(1, 12).Select(i => new SelectListItem { Value = i.ToString(), Text = i.ToString() }), "Month", new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.StartDate.Year, new { htmlAttributes = new { @class = "control-label" } })
                                    <div class="well well-sm">
                                        @Html.DropDownListFor(m => m.StartDate.Year, Enumerable.Range(1582, 650).Select(i => new SelectListItem { Value = i.ToString(), Text = i.ToString() }).OrderByDescending(i => i.Value), "Year", new { htmlAttributes = new { @class = "form-control" } })

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Convert" class="btn btn-default btn-lg" />
                        </div>
                    </div>
                    <!--2nd COLUMN-->
                    <div class="col-lg-4">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <h3 class="panel-title">End Date</h3>
                            </div>
                            <div class="panel-body">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.EndDate.Day, new { htmlAttributes = new { @class = "control-label" } })
                                    <div class="well well-sm">
                                        @Html.DropDownListFor(m => m.EndDate.Day, Enumerable.Range(1, 31).Select(i => new SelectListItem { Value = i.ToString(), Text = i.ToString() }), "Day", new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.EndDate.Month, new { htmlAttributes = new { @class = "control-label" } })

                                    <div class="well well-sm">
                                        @Html.DropDownListFor(m => m.EndDate.Month, Enumerable.Range(1, 12).Select(i => new SelectListItem { Value = i.ToString(), Text = i.ToString() }), "Month", new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.EndDate.Year, new { htmlAttributes = new { @class = "control-label" } })

                                    <div class="well well-sm">
                                        @Html.DropDownListFor(m => m.EndDate.Year, Enumerable.Range(1582, 650).Select(i => new SelectListItem { Value = i.ToString(), Text = i.ToString() }).OrderByDescending(i => i.Value), "Year", new { htmlAttributes = new { @class = "form-control" } })

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div style="clear: both;" class="jumbotron">
                @if (Model.Result != null)
                {
                    @Html.LabelFor(m => m.Result, new { htmlAttributes = new { @class = "control-label" } })
                    <h3>
                        @($"There are {@Model.Result.Item3} Years {@Model.Result.Item2} Months and {@Model.Result.Item1} Days between these dates.")
                    </h3>
                }
                else
                {
                    <h3>
                        Enter values to compare
                    </h3>
                }
            </div>
        }


    </div>

</body>

</html>
